<link rel="stylesheet" href="<%= assetPath('css/home.css') %>" />

<body>
  <!-- body starts -->
  <section>

    <div class="csv-upload-container">
      <!-- CSV Upload Container Starts -->

     
      <form
        action="/file/upload"
        method="post"
        enctype="multipart/form-data"
        style="gap: 1rem"
      
      >

       <!-- form starts -->

        <input type="file" name="file" id="uploadfile"  value="" class="file" accept=".csv" required />
        <button
          type="submit"
          class="submit btn btn-primary"
          id="upload-btn"
        >
          Upload
        </button>

         <!-- form ends -->
         
      </form>
    </div>


    <div id="files">
      <div id="files-header">Uploaded Files</div>
      <ul>
      <% for(file of files){ %>
      <div class="individual-file">
        <li>
          <a href="/file/<%= file._id %>"><%= file.originalName %> 
          &nbsp;<i class="fas fa-external-link-square-alt redirect-btn fa-lg"></i>
          </a>
        </li>
        <li>
          <a href="/file/delete/<%= file._id %>"
            ><i class="fa-solid fa-trash-can delete-btn fa-lg"></i></a>
        </li>
      </div>  
      <% } %>
      </ul>

        <!-- CSV Upload Container Ends -->

    </div>
  </section>
    <!-- body ends -->
</body>

